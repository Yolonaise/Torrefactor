<Grid x:Class="TorrefactorClient.Views.Header"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
  <Grid Background="#B22D570B">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <TextBlock x:Name="title" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="60,0" FontSize="25"/>
    <md:PopupBox Grid.Column="2" Foreground="White" Margin="10" PlacementMode="BottomAndAlignRightEdges">
      <StackPanel>
        <Button Content="Close" Click="CloseClick"/>
        <Button Content="Settings" Click="SettingsClick"/>
      </StackPanel>
    </md:PopupBox>
  </Grid>
</Grid>
