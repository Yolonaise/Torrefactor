<Grid x:Class="TorrefactorClient.Views.Startup.LoadingStartUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibility}}"
      Background="#aa000000">
  <Grid.Style>
    <Style TargetType="FrameworkElement">
      <Style.Triggers>
        <Trigger Property="Visibility" Value="Visible">
          <Trigger.EnterActions>
            <BeginStoryboard>
              <Storyboard>
                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0" To="1.0" Duration="0:0:01" DecelerationRatio="0.5"/>
                <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                    From="0,100,0,-100" To="0,0,0,0" Duration="0:0:0.5" DecelerationRatio="0.5"/>
              </Storyboard>
            </BeginStoryboard>
          </Trigger.EnterActions>
        </Trigger>
      </Style.Triggers>
    </Style>
  </Grid.Style>
  <Image gif:ImageBehavior.AnimatedSource="/Resources/loading.gif" VerticalAlignment="Center" HorizontalAlignment="Center" Height="150" Width="150"/>
  <TextBlock Text="Current work" Foreground="LightGray" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="55,30,0,40"/>
</Grid>
