<Window x:Class="TorrefactorClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:TorrefactorClient.Views"
        xmlns:vm="clr-namespace:TorrefactorClient.ViewModels"
        Height="450" Width="800" WindowStartupLocation="CenterScreen"
        Background="LightGray"
        DataContext="{Binding Source={x:Static vm:MainViewModel.Instance}}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="60"/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <v:Header ></v:Header>
    <ContentControl Grid.Row="1" Content="{Binding CurrentFeature}" Margin="60,0,0,0" />
    <Grid Grid.Row="1" Visibility="{Binding Menu.IsOpen, Converter={StaticResource BooleanToVisibility}}" Background="#70000000"/>
    <Grid Grid.Row="0" Grid.RowSpan="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <v:Menu DataContext="{Binding Menu}"></v:Menu>
    </Grid>
  </Grid>
</Window>
